/*
  TSConfig is used for client code only
*/
{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "."
  },
  "include": ["client/**/*.ts", "client/**/*.tsx"]
}
